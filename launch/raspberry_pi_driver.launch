<launch>

  <arg name="node_name" default="position_driver_node" />
  <arg name="sub_topic" default="command" />
  <arg name="pub_topic" default="odometry" />

  <node name="$(arg node_name)" pkg="raspberry_pi_driver" type="raspbery_pi_driver_node">
    <remap from="sub_topic" to="$(arg sub_topic)" />
    <remap from="pub_topic" to="$(arg pub_topic)" />
  </node>

</launch>
